#include <iostream>

int main() {
    int array[] = {5, 4, 3, 4, 9}; // пример массива
    int size = sizeof(array) / sizeof(array[0]); // вычисляем размер массива

    int min = array[0]; // предполагаем, что первый элемент является минимальным

    // проходим по каждому элементу массива и обновляем минимальное значение, если находим элемент, который меньше текущего минимального
    for (int i = 1; i < size; i++) {
        if (array[i] < min) {
            min = array[i];
        }
    }

    std::cout << "Минимальный элемент в массиве: " << min << std::endl;

    return 0;
}
